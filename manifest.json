{
  "manifest_version": 3,
  "name": "Fancy Search",
  "description": "Upgrade your searches. Integrate advanced search functions and automatically search for key terms among websites you define.",
  "version": "1.0",

  "action": {
    "default_icon": {
      "16": "/images/fancy-search-16.png",
      "32": "/images/fancy-search-32.png",
      "48": "/images/fancy-search-48.png",
      "64": "/images/fancy-search-64.png",
      "128": "/images/fancy-search-128.png"
    },
    "default_popup": "views/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "/images/fancy-search-16.png",
    "32": "/images/fancy-search-32.png",
    "48": "/images/fancy-search-48.png",
    "64": "/images/fancy-search-64.png",
    "128": "/images/fancy-search-128.png"
  },

  "permissions": ["activeTab", "contextMenus", "storage", "search"]
}
